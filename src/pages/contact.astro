---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import SectionBackdrop from '~/components/ui/SectionBackdrop.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata} hideWorkWithUs>
  <!-- HeroText Widget ******************* -->

  <section>
    <SectionBackdrop variant="hero" mask="bottom" />

    <HeroText title="Let's Connect!" padding="pt-8 pb-4" />

    <ContactUs
      id="form"
      classes={{ container: 'pt-0 lg:pt-0' }}
      inputs={[
        {
          type: 'text',
          name: 'name',
          label: 'Name',
        },
        {
          type: 'email',
          name: 'email',
          label: 'Email',
        },
      ]}
      textarea={{
        label: 'Message',
      }}
      disclaimer={{
        label:
          'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
      }}
    />
  </section>

