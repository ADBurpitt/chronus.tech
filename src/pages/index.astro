---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';
// import Steps from '~/components/widgets/Steps.astro';
import Note from '~/components/widgets/Note.astro';
import TechMarquee from '~/components/TechMarquee.astro';
import HeroBackdrop from '~/components/HeroBackdrop.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'chronus.tech',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#hero' },
        { text: 'Expertise', href: '#expertise' },
        { text: 'Porfolio', href: '#porfolio' },
        // { text: 'Resume', href: '#resume' },
        // { text: 'Blog', href: '#blog' },
        // { text: 'Github', href: 'https://github.com/adburpitt' },
      ]}
      actions={[
        // {
        //   text: 'Work with us',
        //   href: getPermalink('/contact#form'),
        // },
      ]}
      showToggleTheme
      isSticky
    />
  </Fragment>

  <!-- Hero Widget ******************* -->

  <Hero
    id="hero"
    title="chronus.tech"
    tagline="Applied AI Solutions"
    actions={[{ variant: 'primary', text: 'Work with us', href: getPermalink('/contact#form') }]}
  >
    <Fragment slot="subtitle">
      Helping startups and teams design, build, and scale AI systems — from prototype to production.
    </Fragment>
  </Hero>

  <HeroBackdrop />
  <TechMarquee />

  <Note title="Reliable. Interpretable. Production-Ready." iconEnabled={false} />

  <!-- Features Widget ************** -->

  <Features
    id="expertise"
    tagline="Expertise"
    title="Core Competencies"
    items={[
      {
        title: 'Agentic & Voice AI',
        description:
          'Design and scale real-time conversational systems, from chatbots to voice agents, built for reliability and production use.',
        icon: 'tabler:robot',
      },
      {
        title: 'Applied LLM Systems',
        description:
          'Prototype and deploy LLM-powered applications that solve real-world problems, with an emphasis on trustworthy and consistent outputs.',
        icon: 'tabler:components',
      },
      {
        title: 'Custom Modelling & Analytics',
        description:
          'Develop bespoke ML models and apply exploratory data analysis to uncover insights, solve domain-specific problems, and extend off-the-shelf AI.',
        icon: 'tabler:analyze',
      },
      {
        title: 'Cloud & Infrastructure',
        description:
          'Deliver end-to-end AI solutions with scalable, secure infrastructure — from provisioning and CI/CD to fully deployed, production-ready systems on the cloud platform of your choice.',
        icon: 'tabler:cloud',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="porfolio"
    title="Portfolio"
    subtitle="Case studies highlighting how we apply AI and system design to real-world challenges, turning complex technical requirements into practical, production-ready systems."
    isReversed
    items={[
      {
        title: 'Outcomes:',
        description:
          'Enabled the client to run real-time voice AI entirely on their own infrastructure, avoiding reliance on third-party providers. This delivered greater control over performance, costs, and data privacy, with enterprise-grade reliability. Delivered a working demo accessible via both a web playground and a dedicated phone line, showcasing multi-channel flexibility and production readiness.',
      },
      {
        title: 'Implementation:',
        icon: 'tabler:cpu',
        bullets: [
          '<b>Provisioned</b> AWS EKS with Terraform for repeatable, scalable deployments',
          '<b>Deployed</b> LiveKit Server and LiveKit SIP Server for WebRTC and SIP traffic',
          '<b>Configured</b> ALB/NLB load balancers with TURN for enterprise firewalls',
          '<b>Integrated</b> Redis for state/session management',
          '<b>Connected</b> SIP to Twilio for telephony access',
        ],
      },
    ]}
    image={{
      src: '/livekit-k8s.svg',
      alt: 'Tech Design Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <!-- Project 1: <br /> -->
        <span class="text-2xl">In-House Voice Agent Infrastructure on AWS</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Outcomes:',
        description:
          'Evolved an MVP into a production-ready AI assistant for Microsoft Word to support auditing and compliance tasks. The new system delivers reliable, standards-aligned outputs, replacing a brittle single-prompt setup with a modular design and a custom evaluation suite. Each suggestion is traceable to relevant auditing codes, providing interpretability and reducing risk for professionals who need confidence and consistency in high-stakes reviews.',
      },
      {
        title: 'Implementation:',
        icon: 'tabler:cpu',
        bullets: [
          '<b>Applied</b> prompt & context engineering practices across the workflow',
          '<b>Developed</b> evaluation suites to validate performance and detect regressions',
          '<b>Implemented</b> guardrails and structured outputs to reduce errors',
          '<b>Introduced</b> prompt versioning and comparison tools for safe iteration',
          '<b>Integrated</b> the improved pipeline seamlessly into the Word plugin experience',
        ],
      },
    ]}
    image={{
      src: '~/assets/images/docpilot.png',
      alt: 'Art and Music Poster Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Checkout DocPilot',
      icon: 'tabler:chevron-right',
      href: 'https://docpilotapp.com',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-2xl">DocPilot — Reliable AI for Document Auditing</span>
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

