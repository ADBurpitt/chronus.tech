---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

import { headerData, footerData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  showAnnouncement?: boolean;
  hideWorkWithUs?: boolean;
}

const { metadata, showAnnouncement = false, hideWorkWithUs = false } = Astro.props;

const headerProps = {
  ...headerData,
  actions: hideWorkWithUs ? headerData.actions.filter((a) => a.text !== 'Work with us') : headerData.actions,
};
---

<Layout metadata={metadata}>
  <slot name="announcement">
    {showAnnouncement && <Announcement />}
  </slot>
  <slot name="header">
    <Header {...headerProps} isSticky showToggleTheme />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
